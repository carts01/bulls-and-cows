<h1>Play new game</h1>

<div class="container">
    <h1>This is the home page</h1>

    <div class="form-container">
        <form action="" method="get" id="codeForm" class="col s12">
            <fieldset>
                <h4>Choose a unique four digit code:</h4>
                    <div class="form-group">
                        <label for="userCode" class="hidden">Enter code</label>
                        <input type="text" id="userCode" class="validate" placeholder="Enter code">
                        <span class="error code-error hidden"></span>
                    </div>
                <h4>Select an opponent:</h4>
                    <div class="form-group">
                        <label>
                        <input name="level-group" type="radio" value="bruce" checked />
                        <span>Bruce (easy)</span>
                        </label>
                        <label>
                        <input name="level-group" type="radio" value="judy" />
                        <span>Judy (medium)</span>
                        </label>
                        <label>
                        <input name="level-group" type="radio" value="lionel" />
                        <span>Lionel (hard)</span>
                        </label>
                    </div>
                    <div class="form-group">
                    <input class="btn btn-default" type="submit" value="Submit your secret code!">
                    </div>
            </fieldset>
        </form>
    </div>

    <div class="user-code--container">
        <span class="show-user-code"></span>
    </div>

    <div class="form-container">
        <form action="" method="get" id="guessForm" class="form-guess hidden">
            <fieldset>
                <div class="form-group">
                    <label for="userGuess">Guess the computers secret code:</label>
                    <input type="text" id="userGuess" class="validate">
                    <span class="error guess-error hidden"></span>
                </div>
                <input class="btn btn-default"  type="submit" value="Guess!">
            </fieldset>
        </form> 
    </div>

    <div class="progress-bar-container hidden">
      <div class="progress-bar progress-bar-show-percent">
        <div class="progress-bar-filled" style="width: 0;" data-filled="0"></div>
      </div>
    </div>

    <div class="results">
        <div class="results--players">
            <h4 class="players-table--name"></h4>
            <table class="players-table hidden">
                <thead class="players-table--head">
                    <tr class="table-row">
                        <th>Round</th>
                        <th>Guess</th>
                        <th>Bulls</th>
                        <th>Cows</th>
                    </tr>
                </thead>
                <tbody class="players-table--body">

                </tbody>
            </table>
        </div>
        <div class="results--comp">
            <h4 class="comp-table--name"></h4>
            <table class="comp-table hidden">
                <thead class="comp-table--head">
                    <tr class="table-row">
                        <th>Round</th>
                        <th>Guess</th>
                        <th>Bulls</th>
                        <th>Cows</th>
                    </tr>
                </thead>
                <tbody class="comp-table--body">

                </tbody>
            </table>
        </div>
    </div>

    <div class="result-container">

    </div>

    <div class="reset-container">
      <button class="play-again btn btn-default hidden" disabled>Play Again</button>
    </div>

    <hr>

    <%= render 'shared/errors', obj: @game %>

    <%= render 'form' %>

</div>
