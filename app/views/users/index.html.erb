<h1>Index of all users</h1>

<table class="users__table striped centered">
  <thead class="users__table--head">
    <tr class="table-row">
      <th>Username</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Games</th>
      <th>Wins</th>
      <th>Draws</th>
      <th>Losses</th>
      <th>Win %</th>
    </tr>
  </thead>
  <tbody class="users__table--body">
    <% @users.each do |user| %>
      <tr class="table-row">
        <td><%= link_to user.username, user_path(user) %></td>
        <td><%= user.firstname %></td>
        <td><%= user.lastname %></td>
        <td><%= user.email %></td>
        <td><%= user.games.count %></td>
        <td><%= get_wins(user.games) %></td>
        <td><%= get_draws(user.games) %></td>
        <td><%= get_losses(user.games) %></td>
        <td><%= (get_wins(user.games)/ user.games.count.to_f).round(2) * 100 %></td>
      </tr>
    <% end %>
  </tbody>
</table>