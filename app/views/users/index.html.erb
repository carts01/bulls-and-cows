<h1>Index of all users</h1>

<table class="users__table">
  <thead class="users__table--head">
    <tr class="table-row">
      <th>Username</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
    </tr>
  </thead>
  <tbody class="users__table--body">
    <% @users.each do |user| %>
      <tr class="table-row">
        <td><%= link_to user.username, user_path(user) %></td>
        <td><%= user.firstname %></td>
        <td><%= user.lastname %></td>
        <td><%= user.email %></td>
      </tr>
    <% end %>
  </tbody>
</table>