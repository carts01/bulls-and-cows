<h1>Log in</h1>

<%= form_with(url: login_path, scope: :session, local: true) do |f| %>
  <div>
    <%= f.label :email %>
    <%= f.email_field :email, class: 'form-input', placeholder: 'Email address' %>
  </div>
  <div>
    <%= f.label :password %>
    <%= f.password_field :password, class: 'form-input', placeholder: 'Password' %>
  </div>
  <div>
    <%= f.submit "Log in" %>
  </div>
<% end %>