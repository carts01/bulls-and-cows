<header class="header">
  <div class="wrapper">
    <%= link_to 'Home', root_path, class: 'nav_link' %>
    <%= link_to 'How to play', instructions_path, class: 'nav_link' %>
    <%= link_to 'Leaderboard', users_path, class: 'nav_link' %>
    <% if logged_in? %>
      <%= link_to 'Log out', logout_path, class: 'nav_link' %>
    <% else %>
      <%= link_to 'Log in', login_path, class: 'nav_link' %>
      <span>or</span>
      <%= link_to 'Sign up', register_path, class: 'nav_link' %>  
    <% end %>
  </div>
</header>